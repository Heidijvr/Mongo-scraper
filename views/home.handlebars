<!--homepage-->
<div class="container">
    <div class="jumbotron">
        <div class="text-center">
            <h1><strong>Washington Post - Lifestyle</strong></h1>
            <h2>Mongo Scraper</h2>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href={{this.link}} target="_blank">
                        <h4>{{this.title}}</h4>
                    </a>
                </div>
                <div class="panel-body">
                    <p> {{this.summary}}</p>
                    <img class="img-thumbnail float-right" style="height: 200px; width: auto" src={{this.image}}>
                    <br><br>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>Looks like you don't have any new articles..</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>